<table class="table table-striped table-sm table-bordered" cellspacing="0" width="100%" id="backup">
  <thead>
  	<tr>
  		<th>Filename</th>
      <th>Size</th>
      <th>Action</th>
  	</tr>
  </thead>
  <tbody>
  	{% for file in files %}
      <tr>
        <td>{{ file.name }}</td>
        <td>{{ (file.size / 1000000)|round(2) }} MB</td>
        <td>N/A</td>
      </tr>
    {% endfor %}
  </tbody>
</table>